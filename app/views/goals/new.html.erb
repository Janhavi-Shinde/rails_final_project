<h1> Create a new Goal </h1>

<%= form_for @goal do |f| %>
    <label> Title: </label>
    <%= f.text_field :title %><br>

    <label> Description: </label>
    <%= f.text_field :description %><br>

    
    <%= f.collection_check_boxes :sphere_ids, Sphere.all, :id, :title %>

    <%= f.submit  %>

<% end %>
